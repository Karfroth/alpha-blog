<h1 align="center">Listing All Articles</h1>


<% @articles.each do |row| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to row.title, article_path(row) %>
        </div>
        <div class="article-body">
          <%= truncate(row.description, length: 100) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(row), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_path(row), method: :delete, 
                                        data: {confirm: "Are your sure?"}, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
